#include "stm32f10x_rcc.h"
#include "stm32f10x_gpio.h"
#include "stm32f10x_adc.h"
#include "stm32f10x_dma.h"
#include "stm32f10x.h"
#include "misc.h"

void RCC_configure(void) {
    RCC_APB2PeriphClockCmd(RCC_APB2Periph_GPIOD | RCC_APB2Periph_GPIOA | RCC_APB2Periph_AFIO | RCC_APB2Periph_ADC1, ENABLE);
    RCC_AHBPeriphClockCmd(RCC_AHBPeriph_DMA1, ENABLE);
}


void GPIO_configure(void) {
    GPIO_InitTypeDef GPIOx;

    GPIOx.GPIO_Mode = GPIO_Mode_Out_PP;
    GPIOx.GPIO_Pin  = (GPIO_Pin_2 | GPIO_Pin_3 | GPIO_Pin_4 | GPIO_Pin_7);
    GPIOx.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOD, &GPIOx);

    GPIOx.GPIO_Mode = GPIO_Mode_AIN;
    GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
    GPIO_Init(GPIOA, &GPIOx);
    GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
    GPIO_Init(GPIOA, &GPIOx);
    GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
	GPIO_Init(GPIOA, &GPIOx);
	GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
	GPIO_Init(GPIOA, &GPIOx);
	GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
	GPIO_Init(GPIOA, &GPIOx);
	GPIOx.GPIO_Pin = (GPIO_Pin_3 | GPIO_Pin_4);
	GPIO_Init(GPIOA, &GPIOx);
}
